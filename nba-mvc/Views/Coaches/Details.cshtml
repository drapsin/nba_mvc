@model nba_mvc.Models.Coach

<h1>Coach Details</h1>
<hr />

<div class="mb-3">
    <label><strong>Profile Image:</strong></label><br />
    <img src="@(string.IsNullOrEmpty(Model.ImageUrl) ? "/image/fallback-image.png" : Model.ImageUrl)"
         alt="Coach Image" width="200" style="border:1px solid #ccc;" />
</div>

<dl class="row">
    <dt class="col-sm-2">First Name</dt>
    <dd class="col-sm-10">@Model.FirstName</dd>

    <dt class="col-sm-2">Last Name</dt>
    <dd class="col-sm-10">@Model.LastName</dd>

    <dt class="col-sm-2">Age</dt>
    <dd class="col-sm-10">@Model.Age</dd>

    <dt class="col-sm-2">History</dt>
    <dd class="col-sm-10">@Model.History</dd>

    <dt class="col-sm-2">Team</dt>
    <dd class="col-sm-10">@Model.Team?.Name</dd>

    <dt class="col-sm-2">Created At</dt>
    <dd class="col-sm-10">@Model.CreatedAt</dd>
</dl>

<a asp-action="Edit" asp-route-id="@Model.Id">Edit</a> |
